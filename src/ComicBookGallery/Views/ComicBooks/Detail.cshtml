<body>
<div>
    <!--Use c# variables described above-->
    <h1>@ViewBag.SeriesTitle</h1>
    <h2>Issue #@ViewBag.IssueNumber</h2>
    
    <h5>Description:</h5>
    <div>@Html.Raw(ViewBag.Description)</div><!--Html.Raw prevents escaping the html tags-->
    
    @if (ViewBag.Artists.Length>0)
    {
        <h5>Artists:</h5>
        <div>
            <ul>
                @foreach (var artist in ViewBag.Artists)
                {
                    // between <text> element we let razor know
                    // that we want to switch from writing code
                    // to write text content
                    //<text>*@artist</text>
                    <li>*@artist</li>
                }
            </ul>
        </div>
    }
